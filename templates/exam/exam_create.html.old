{% extends 'main/header.html' %}

<title>{{ instance.first_name }}</title>
{% block content %}


    <!--Exam form-->

    <div style="margin:80px" class="container">
        <h1>Exam</h1>

        <form method="post">
            {% csrf_token %}
            <div class="form-row">
                <div class="form-group col-md-4 mb-0">
                    {{ instance.first_name }}
                    {{ instance.last_name }}
                    {{ instance.rank }}

                </div>

                <div class="form-row">
                    <div class="form-group col-md-4 mb-0">
                        {{ e_form.as_p }}
                    </div>
                    <div class="form-group col-md-4 mb-0">
                        {{ e_form.contact }}
                    </div>

                    <div class="form-row">
                        <div class="col-12">
                            {{ e_form.notes }}
                        </div>
                    </div>
                    <button type="submit">Exam Submission</button>
        </form>
    </div>

{% endblock %}